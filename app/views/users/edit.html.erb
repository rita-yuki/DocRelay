<h2>ユーザー情報編集</h2>
<%= form_for(@user) do |f| %>

<div class="field">
  <%= f.label :employee_number, "社員番号" %><br />
  <%= f.text_field :employee_number, readonly: true %>
</div>

<div class="field">
    <%= f.label :ユーザー名%><br />
    <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %> <i>(変更しない場合は空のまま)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上で入力してください。</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <i>(変更を確定するために必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "戻る", :back, class: "btn btn-secondary" %>
